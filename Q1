#include <stdio.h>

int
main ()
{
  int a;
  printf ("enter the age");
  scanf ("%d", &a);

  if (a < 18)
    {
      printf ("not eligible");

    }
  else
    {
      printf ("eligible");
    }
  return 0;

}

#include<stdio.h>
#include<stdlib.h>

int main()
{
    int age,num;
    printf("Enter the age");
    scanf("%d",&age);
    num=age>=18?1:0;
    if(num==1)
    {
        printf("Eligible");
    }
    else
    {
        printf("not eligible");
    }
}
