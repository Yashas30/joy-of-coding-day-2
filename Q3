#include <stdio.h>

void main()
{
    int a, b, c;
    char op;
    printf("Enter an expression (a+b)\n");
    scanf("%d %c %d",&a,&op,&b);
    switch(op)
{
    case'+':
    c=a+b;
    printf("sum=%d",c);
    break;
    
    case'-':
    c=a-b;
    printf("Difference=%d",c);
    break;
    
    case'*':
    c=a*b;
    printf("Product=%d",c);
    break;
    
    case'/':
    if(b==0)
    {
        printf("Invalid");
        break;
    }
    else
    c=a/b;
    printf("Division=%d",c);
    break;
    
    case'%':
    printf("Modulus=%d",c);
    break;


}
}
